{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": ["@nestjs/swagger"],
    "webpack": false,
    "deleteOutDir": true,
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true, "outDir": "dist/" },
      { "include": "mail/**/*", "watchAssets": true, "outDir": "dist/" },

      { "include": "certs/**/*", "watchAssets": true, "outDir": "dist/" }
    ]
  }
}
